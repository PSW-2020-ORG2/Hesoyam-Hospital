<Window x:Class="GraphicEditor.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="LogIn" Height="550" Width="810">
    <Grid x:Name="LogIn_grid">
        <TextBlock Height="33" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="148,50,148,0" FontSize="20" TextAlignment="Center"><Run FontSize="24" Text="Log in"/></TextBlock>
        <Label Content="Username:" Height="33" VerticalAlignment="Top" Margin="0,112,0,0" FontSize="20" Width="200"/>
        <Label Content="Password:" Height="33" VerticalAlignment="Top" Margin="0,210,0,0" FontSize="20" Width="200"/>
        <TextBox x:Name="Username" Height="33" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <PasswordBox x:Name="Password" Height="33" Margin="148,259,148,0"  VerticalAlignment="Top" Width="200"/>

        <Button Content="Log in" FontSize="15" Height="33" HorizontalAlignment="Center" VerticalAlignment="Top"  Click="Button_Click_Map" Width="194" Margin="0,351,0,0"/>
    </Grid>
</Window>
