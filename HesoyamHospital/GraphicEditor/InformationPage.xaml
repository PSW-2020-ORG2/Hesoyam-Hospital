<Page x:Class="GraphicEditor.InformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicEditor"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="450"
      Title="InformationPage">


    <Grid Height="320" Width="440" Background="Beige">
        <Label Content="Basic information"
               Margin="20,17,205,264"
               FontSize="15"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontWeight="DemiBold"/>

        <TextBlock Margin="20,82,20,189" Background="White"
                   />
        <Label Content="Additional information"
               Margin="20,156,205,134"
               FontSize="15"
               FontWeight="DemiBold"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <TextBlock Margin="20,194,20,20" Background="White"
                   />
        <Grid x:Name="Window" Visibility="Visible" Grid.ColumnSpan="1" Grid.RowSpan="1"/>
    </Grid>
</Page>
